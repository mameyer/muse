<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - SpotifyStatistics</title>

        <link rel="stylesheet" href="~/lib/bootswatch/dist/pulse/bootstrap.min.css" id="themeLink" />
        <link rel="stylesheet" href="~/css/site.css" />

        @* Uncomment to use the HtmlEditor control *@
        @* <script src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.min.js"></script> *@

        @* Uncomment to use the Gantt control *@ 
        @*<link href="~/css/devextreme/dx-gantt.css" rel="stylesheet" />*@

        @* Uncomment to use the Diagram control *@
        @*<link href="~/css/devextreme/dx-diagram.css" rel="stylesheet" />*@

        <link href="~/css/devextreme/dx.common.css" rel="stylesheet" />
        <link href="~/css/devextreme/dx.light.css" rel="stylesheet" />

        @* Uncomment to use the Gantt control *@ 
        @*<script src="~/js/devextreme/dx-gantt.js"></script>*@

        @* Uncomment to use the Diagram control *@
        @*<script src="~/js/devextreme/dx-diagram.js"></script>*@

        <script src="~/js/devextreme/jquery.js"></script>

        @* Uncomment to use Globalize for localization *@
        @*<script src="~/js/devextreme/cldr.js"></script>*@
        @*<script src="~/js/devextreme/cldr/event.js"></script>*@
        @*<script src="~/js/devextreme/cldr/supplemental.js"></script>*@
        @*<script src="~/js/devextreme/cldr/unresolved.js"></script>*@
        @*<script src="~/js/devextreme/globalize.js"></script>*@
        @*<script src="~/js/devextreme/globalize/message.js"></script>*@
        @*<script src="~/js/devextreme/globalize/number.js"></script>*@
        @*<script src="~/js/devextreme/globalize/currency.js"></script>*@
        @*<script src="~/js/devextreme/globalize/date.js"></script>*@

        @* Uncomment to enable client-side export *@
        <script src="~/js/devextreme/jszip.js"></script>

        <script src="~/js/devextreme/dx.all.js"></script>

        @* Uncomment to provide geo-data for the VectorMap control *@
        @*<script src="~/js/devextreme/vectormap-data/world.js"></script>*@

        <script src="~/js/devextreme/dx.aspnet.mvc.js"></script> 
        <script src="~/js/devextreme/dx.aspnet.data.js"></script>
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Muse</a>

                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a asp-controller="Album" asp-action="Index" class="nav-link">Albums</a></li>
                            <li><a asp-controller="TopArtist" asp-action="Index" class="nav-link">Top Artists</a></li>
                            <li><a asp-controller="TopTrack" asp-action="Index" class="nav-link">Top Tracks</a></li>
                            <li><a asp-controller="Recommendation" asp-action="Index" class="nav-link">Recommendations</a></li>
                            <li><a asp-controller="Playlist" asp-action="Index" class="nav-link">Playlists</a></li>
                            <li><a asp-controller="Player" asp-action="Index" class="nav-link">Player</a></li>
                        }
                        <li><a asp-controller="Playlist" asp-action="LocalPlaylist" class="nav-link">Local Playlists</a></li>
                    </ul>

                    <ul class="navbar-nav my-2 my-lg-0">
                        <li><a class="nav-link" id="currently-playing" style="color: red;"></a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a asp-controller="Home" asp-action="UserProfile" class="nav-link">Hello @User.Identity.Name!</a></li>
                            <li><a href="~/logout" class="nav-link">Log Out</a></li>
                        }
                        else
                        {
                            <li><a href="~/login" class="nav-link">Log In with Spotify</a></li>
                        }
                    </ul>
                </div>
            </nav>
        </header>

        <main class="container-fluid">
            <partial name="_CookieConsentPartial" />

            @RenderBody()
        </main>
    
        <script src="~/lib/signalr/signalr.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        
        <script src="~/js/site.js" asp-append-version="true"></script>
       
        <script type="text/javascript">
            var currentTrack = null;
            var lastRequest = null;
            var lastUpdate = null;
            var newSince = null;

            function getCurrentlyPlaying() {
                var updated = false;

                $.ajax({
                    url: '@Url.Action("Get", "CurrentlyPlayingApi")',
                    success: function (e) {
                        if (e && e.Error) {
                            window.location.href = "/login";
                        }

                        var html = "";
                        if ((e == null && currentTrack != null)
                            || (e != null && currentTrack == null)
                            || (e != null && currentTrack != null && e.item.id != currentTrack.item.id)) {
                            updated = true;
                            console.debug(e);
                        }

                        currentTrack = e;

                        if (currentTrack != null) {
                            if (currentTrack.item.name) html = currentTrack.item.name;
                            if (currentTrack.item.artists && currentTrack.item.artists.length > 0) {
                                html += " [" + currentTrack.item.artists[0].name + "]"
                            }
                        }
                        $("#currently-playing").html(html);
                    },
                    async: false
                });

                return updated;
            }

            setInterval(function() {
                var updated = false;
                if (lastRequest == null || ((Date.now() - lastRequest) >= 2500))
                {
                    updated = getCurrentlyPlaying();
                    if (updated) newSince = Date.now();

                    lastRequest = Date.now();
                    lastUpdate = Date.now();
                }

                var diff = Date.now() - lastRequest;
                currentPlayingCallback(updated, diff);
                lastUpdate = Date.now();
            }, 800);

            function currentPlayingCallback(hasChanged, diff) {
            }
        </script>

        @RenderSection("Scripts", required: false)
    </body>
</html>